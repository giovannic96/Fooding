<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="0dp"
    android:paddingEnd="18dp"
    android:paddingTop="20dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="6dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignEnd="@+id/card_view"
            android:layout_marginStart="60dp"
            android:layout_marginTop="14dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dish_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="22dp"
                android:ellipsize="end"
                android:maxLength="40"
                android:maxLines="2"
                android:text="OCCCCCCCCCCCCCCCCfCCCCCCCCCCCCCCCCCCCCC"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/dish_qtySel_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dish_name_tv"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="15dp"
                android:gravity="bottom|end"
                android:paddingStart="0dp"
                android:paddingEnd="2dp"
                android:paddingBottom="8dp"
                android:text="Ordered: 1"
                android:textColor="@color/secondaryColor"
                android:textSize="18dp"
                android:textStyle="bold" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/dish_photo_rec_iv"
        android:layout_width="110dp"
        android:layout_height="90dp"
        android:layout_marginTop="18dp"
        app:civ_border_color="@android:color/white"
        app:civ_border_width="4dp"
        android:src="@mipmap/icons8_spaghetti_96"
        android:elevation="8dp"
        app:civ_fill_color="@color/cardNormalColor"/>

</RelativeLayout>
